<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="TaskPaneApp">
  <Id>your-app-id</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>ElektrycznyPies</ProviderName>
  <DefaultLocale>pl-PL</DefaultLocale>
  <DisplayName>Translation Cashier</DisplayName>
  <Description>How much did you earn today, translator?</Description>
  <IconUrl DefaultValue="https://your-icon-url.com/icon.png"/>
  <HighResolutionIconUrl DefaultValue="https://your-icon-url.com/hi-res-icon.png"/>
  <SupportUrl DefaultValue="https://your-support-url.com"/>

  <AppDomains>
    <AppDomain>https://localhost:3000</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Word"/>
  </Hosts>

<DefaultSettings>
  <SourceLocation DefaultValue="file:///C:/path/to/your/taskpane.html"/>
</DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>
</OfficeApp>
